<li id="story-{{id}}" data-index="{{i}}" class="post-{{type}}">
	<a href="{{url}}" class="{{#detail_disclosure}}detail-disclosure{{/detail_disclosure}}{{#disclosure}}disclosure{{/disclosure}} {{#selected}}selected{{/selected}}">
		<div class="number">{{i}}</div>
		<div class="story">
			<b>{{title}}</b>
			{{#user}}
				<span class="metadata">
					{{#domain}}<span class="link-text">{{domain}}</span><br>{{/domain}}
					<span class="inline-block">{{points}} {{i_point}} by {{user}} {{time_ago}}</span>
				</span>
			{{/user}}
			{{^user}}
				<span class="metadata">
					{{#domain}}<span class="link-text">{{domain}}</span><br>{{/domain}}
					<span class="inline-block">{{time_ago}}</span>
				</span>
			{{/user}}
		</div>
	</a>
	{{#detail_disclosure}}
	<a href="#/item/{{id}}" class="detail-disclosure-button">
		<span class="comments-count">{{comments_count}}</span>
	</a>
	{{/detail_disclosure}}
</li>