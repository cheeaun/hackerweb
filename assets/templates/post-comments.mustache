<div class="post-content">
	{{#has_post}}
		<header>
			<a href="{{url}}" target="_blank">
				<h1>{{title}}</h1>
				{{#user}}
					{{#domain}}<span class="link-text">{{domain}}</span>{{/domain}}
				{{/user}}
			</a>
			<p class="metadata">
				{{#user}}
					<span class="inline-block">{{points}} {{i_point}} by {{user}}</span>
					 <span class="inline-block">{{time_ago}}{{#comments_count}} &middot; {{comments_count}} {{i_comment}}{{/comments_count}}</span>
				{{/user}}
				{{^user}}
					<span class="inline-block">{{time_ago}}</span>
				{{/user}}
				<a href="{{hn_url}}" target="_blank" class="external-link">{{short_hn_url}}</a>
			</p>
		</header>
	{{/has_post}}
	{{#has_content}}
		<section class="grouped-tableview">
			{{{content}}}
			{{#has_poll}}
				<ul class="poll">
				{{#poll}}
					<li title="{{percentage}}%">
						<span class="poll-details"><b>{{item}}</b> <span class="points">{{points}} {{i_point}}</span></span>
						<div class="poll-bar"><span style="width: {{width}}"></span></div>
					</li>
				{{/poll}}
				</ul>
			{{/has_poll}}
		</section>
	{{/has_content}}
</div>
<section class="comments">
	{{#loading}}
		<div class="loader"><i class="icon-loading"></i> Loading&hellip;</div>
	{{/loading}}
	{{#load_error}}
		<div class="load-error">Couldn't load comments.<br><button>Try again</button></div>
	{{/load_error}}
	{{^loading}}
	{{^load_error}}
		{{#has_comments}}
			<ul>
				{{>comments_list}}
			</ul>
		{{/has_comments}}
		{{^has_comments}}
				<p class="no-comments">No comments.</p>
		{{/has_comments}}
	{{/load_error}}
	{{/loading}}
</section>
